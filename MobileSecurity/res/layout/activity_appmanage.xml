<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/header"
        android:text="软件管理" />

    <LinearLayout
        android:id="@+id/nav_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_userapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/recommend_nav_bg"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:padding="5dip"
            android:text="用户软件"
            android:textColor="@drawable/viewpage_title_seletor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_sysapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/recommend_nav_bg"
            android:gravity="center_horizontal"
            android:padding="5dip"
            android:text="系统预装"
            android:textColor="@drawable/viewpage_title_seletor"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_Sdsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="7dip"
            android:text="内存大小"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_ROMsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="7dip"
            android:text="可用内寸"
            android:textSize="16sp" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_line"
        android:padding="5dip"
        android:background="@color/all_background"
        android:fadingEdge="none" />

</LinearLayout>